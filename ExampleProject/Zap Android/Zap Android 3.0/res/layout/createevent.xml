<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_bg"
    android:orientation="vertical"
    android:padding="20dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Title"
                style="@style/BlackText" />

            <EditText
                android:id="@+id/etCreateEventTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Title" >
            </EditText>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Location"
                style="@style/BlackText" />

            <EditText
                android:id="@+id/etCreateEventLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Location" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Time"
                style="@style/BlackText" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/tvCreateEventTime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/bCreateEventTimePicker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:padding="15dp"
                    android:text="Pick Time" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Date"
                style="@style/BlackText" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/tvCreateEventDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/bCreateEventDatePicker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:padding="15dp"
                    android:text="Pick Date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Open Invite  "
                    style="@style/BlackText" />

                <CheckBox
                    android:id="@+id/cbCreateEventOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Notes (Optional)"
                style="@style/BlackText" />

            <EditText
                android:id="@+id/etCreateEventNotes"
                android:hint="Notes"
                android:inputType="textMultiLine" 
                android:lines="6"
    			android:minLines="2"
    			android:gravity="top|left"
    			android:maxLines="6" 
			    android:layout_height="wrap_content" 
			    android:layout_width="fill_parent" 
			    android:scrollbars="vertical" >
            </EditText>

            <Button
                android:id="@+id/bCreateEventSubmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Create Event" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>