<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical"
    android:padding="25dp" >

    <TextView
        android:id="@+id/tvRequester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUESTER NAME"
        android:textColor="#FFF" 
        android:textSize="16dp" />


     <TextView
         android:id="@+id/tvDate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="DATE"
         android:textColor="#CCF" />

     <TextView
         android:id="@+id/tvTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="TIME"
         android:textColor="#CCF" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATION"
        android:textColor="#CCF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" " />

    <LinearLayout
        android:id="@+id/ChangeRequestVoteButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10" >

        <Button
            android:id="@+id/bRequestYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="  Yes  " />

        <Button
            android:id="@+id/bRequestNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="  No  " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ChangeRequestVoteResponses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voted Yes"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voted No"
                android:textColor="#FFF" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>